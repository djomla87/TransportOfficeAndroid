    android:layout_height="match_parent"

    tools:context="com.example.mt.menitest.TaskPrevozi$PlaceholderFragment">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:id="@+id/ListViewNijeUtovareno"
